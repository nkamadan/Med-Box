<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="56dp"
        android:paddingRight="24dp">

        <ImageView
            android:layout_width="349dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:src="@drawable/logo" />

        <!-- Name Label -->
        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="Medicine Name"></EditText>

        <!-- Color Label -->
        <EditText
            android:id="@+id/input_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="Capsule Color">

        </EditText>

        <EditText
            android:id="@+id/input_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="Capsule Number"></EditText>

        <EditText
            android:id="@+id/input_kacdefa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="Number of times"></EditText>

        <RadioGroup
            android:id="@+id/rdgroup"
            android:layout_width="371dp"
            android:layout_height="72dp"

            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Ac" />

            <RadioButton
                android:id="@+id/radio_tok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Tok" />
        </RadioGroup>

        <TimePicker
            android:id="@+id/datePicker1"
            android:layout_width="361dp"
            android:layout_height="88dp"
            android:timePickerMode="spinner" />


        <Button
            android:id="@+id/btn_add"
            android:layout_width="356dp"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            android:onClick="onClick"
            android:padding="12dp"
            android:text="Add Medicine" />


    </LinearLayout>

</FrameLayout>